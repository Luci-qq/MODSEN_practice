<FunctionalLayout>:
    md_bg_color: 0.23, 0.2, 0.27
    radius: [25,]
    orientation: 'vertical'
    spacing: 10
    padding: [10, 10, 10, 10]

    crop_width: crop_width
    crop_height: crop_height
    rotate_angle: rotate_angle
    contrast_factor: contrast_factor
    brightness_factor: brightness_factor

    MDLabel:
        size_hint: 1.0, None
        height: self.texture_size[1]
        text: "ImageAugmentation"
        halign: 'center'
        color: 1,1,1,1
        font_style: 'Headline'
        role: 'small'

    MDLabel:
        size_hint: 1.0, None
        height: self.texture_size[1]
        text: "Crop"
        color: 1,1,1,1
        font_style: 'Title'
        role: 'large'

    MDGridLayout:
        cols: 2
        size_hint: 1.0, None
        height: "48dp"
        spacing: 10
        MDTextField:
            id: crop_width
            mode: 'filled'
            MDTextFieldHintText:
                text: 'Width'
        MDTextField:
            id: crop_height
            mode: 'filled'
            MDTextFieldHintText:
                text: 'Height'

    MDLabel:
        size_hint: 1.0, None
        height: self.texture_size[1]
        text: "Rotate"
        color: 1,1,1,1
        font_style: 'Title'
        role: 'large'

    MDTextField:
        id: rotate_angle
        mode: 'filled'
        MDTextFieldHintText:
            text: 'Angle'

    MDLabel:
        size_hint: 1.0, None
        height: self.texture_size[1]
        text: "Contrast/Brightness"
        color: 1,1,1,1
        font_style: 'Title'
        role: 'large'

    MDGridLayout:
        cols: 2
        size_hint: 1.0, None
        height: "48dp"
        spacing: 10
        MDTextField:
            id: contrast_factor
            mode: 'filled'
            MDTextFieldHintText:
                text: 'Factor(contrast)'
        MDTextField:
            id: brightness_factor
            mode: 'filled'
            MDTextFieldHintText:
                text: 'Factor(brightness)'

    Widget:
        size_hint_y: None
        height: "15dp"

    MDGridLayout:
        cols: 3
        size_hint: 1.0, None
        pos_hint: {'x': 0.15}
        spacing: 10
        MDButton:
            id: clear_button
            style: 'elevated'
            on_press: root.clear_fields()
            MDButtonIcon:
                icon: 'minus'
            MDButtonText:
                text: 'Clear'
        MDButton:
            id: apply_button
            style: 'elevated'
            on_press: root.apply_changes()
            MDButtonIcon:
                icon: 'check'
            MDButtonText:
                text: 'Apply'
        MDButton:
            id: save_button
            style: 'elevated'
            on_press: root.save_image()
            MDButtonIcon:
                icon: 'content-save'
            MDButtonText:
                text: 'Save'

    Widget:
        size_hint_y: 1

<ImageLayout>:
    md_bg_color: 0.329, 0.305, 0.38
    radius: [25,]

    Widget:
        size_hint_y: 1

