<ImageLayout@MDFloatLayout>:
    md_bg_color: 0.329, 0.305, 0.38
    radius: [25,]
    height_label: _height_label
    width_label: _width_label
    MDLabel:
        size_hint: 1.0, None
        text: "Current Image:"
        color: 1,1,1,1
        font_style: 'Headline'
        bold: True
        pos_hint: {'x': 0.03,'y': 0.9}
    MDFloatLayout:
        size_hint: 0.9,0.8
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        md_bg_color: 1,1,1,1
        radius: [25,]
    MDBoxLayout:
        size_hint: 0.3, 0.05
        pos_hint: {'x': 0.03,'y': 0.03}
        orientation: 'vertical'
        MDLabel:
            id: _width_label
            text: ''
            color: 1,1,1,1
        MDLabel:
            id: _height_label
            text: ''
            color: 1,1,1,1
